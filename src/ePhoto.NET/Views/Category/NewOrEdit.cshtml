@model CategoryModel

@{
    Layout = T4Routes.Shared.Views._NarrowLayout;
    ViewBag.Title = "ای‌فوتو - ایجاد/ویرایش دسته بندی";
}

<div class="container">
    @using (Html.BeginForm(T4Routes.Category.NewOrEdit(Model.CategoryId), FormMethod.Post, new {@class = "form-horizontal form-narrow"})) {
        @Html.HiddenFor(model => model.CategoryId)
        <h2 class="form-narrow-heading">ایجاد/ویرایش دسته بندی</h2>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new {@class = "col-sm-4 control-label"})
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Name, new {@class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Name)})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Slug, new {@class = "col-sm-4 control-label"})
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Slug, new {@class = "form-control text-right", placeholder = @Html.DisplayNameFor(model => model.Slug)})
                @Html.ValidationMessageFor(model => model.Slug)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button class="btn btn-primary" type="submit">ذخیره کن</button>
                @Html.ActionLink("برگشت", T4Routes.Category.Manage(), new {@class = "btn btn-success"})
            </div>
        </div>
    }
</div>
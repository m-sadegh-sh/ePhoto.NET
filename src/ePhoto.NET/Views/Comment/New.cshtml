@model NewCommentModel

@using (Html.BeginForm(T4Routes.Comment.New(Model.Photo.Category.Slug, Model.Photo.Slug), FormMethod.Post, new {@class = "form-horizontal form-narrow col-md-12" })) {
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.TextAreaFor(model => model.Body, new {@class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Body)})
        @Html.ValidationMessageFor(model => model.Body)
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">ثبت نظر</button>
    </div>
}
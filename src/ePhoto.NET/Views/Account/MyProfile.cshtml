@model MyProfileModel

@{
    Layout = T4Routes.Shared.Views._NarrowLayout;
    ViewBag.Title = "ای‌فوتو - پروفایل من";
}

<div class="container">
    @using (Html.BeginForm(T4Routes.Account.MyProfile(), FormMethod.Post, new {@class = "form-horizontal form-narrow", enctype = "multipart/form-data" })) {
        <h2 class="form-narrow-heading">پروفایل من</h2>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Slug, new {@class = "col-sm-4 control-label"})
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Slug, new {@class = "form-control text-right", placeholder = @Html.DisplayNameFor(model => model.Slug)})
                @Html.ValidationMessageFor(model => model.Slug)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DisplayName, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.DisplayName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.DisplayName) })
                @Html.ValidationMessageFor(model => model.DisplayName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AvatarFile, new {@class = "col-sm-4 control-label"})
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.AvatarFile, new {@class = "form-control", type = "file"})
                @Html.ValidationMessageFor(model => model.AvatarFile)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button class="btn btn-primary" type="submit">ذخیره کن</button>
                @Html.ActionLink("برگشت", T4Routes.Photo.Index(), new {@class = "btn btn-success"})
            </div>
        </div>
    }
</div>